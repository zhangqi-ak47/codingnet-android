<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_15">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_15"
            android:textColor="@color/font_1"
            android:textSize="15sp"
            tools:text="" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_below="@id/title"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/padding_15"
            android:layout_toRightOf="@+id/icon"
            android:text="chenchao"
            android:textSize="12sp"
            android:textColor="@color/font_3" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/name"
            android:layout_marginBottom="1dp"
            android:layout_toRightOf="@+id/name"
            android:text="Small Text"
            android:textSize="12sp"
            android:textColor="@color/font_3" />

        <TextView
            android:id="@+id/mergeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_15"
            android:text="12121212"
            android:textSize="12sp"
            android:textColor="#ff4e90bf" />

    </RelativeLayout>

    <include layout="@layout/divideline_15" />

    <TextView
        android:id="@+id/preView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mergefile_list_item_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15"
        android:text="5个文件，共1新增和0删除" />

    <include
        android:id="@+id/headerDivide"
        layout="@layout/divide_middle_15"
        android:visibility="gone" />

</LinearLayout>
