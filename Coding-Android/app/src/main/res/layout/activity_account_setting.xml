<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divide"
    android:orientation="vertical">

    <include layout="@layout/divide_top_15" />

    <RelativeLayout
        android:id="@+id/aboutCoding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selector"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="个性后缀"
            android:textColor="@color/font_1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/suffix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/font_3"
            android:textSize="15sp"
            tools:text="邮箱" />

    </RelativeLayout>

    <include layout="@layout/divide_middle_15" />

    <RelativeLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selector"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15">

        <TextView
            android:id="@+id/emailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="邮箱"
            android:textColor="@color/font_1"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="5dp"
            android:text="未绑定"
            android:textColor="@color/font_3"
            android:textSize="15sp" />

    </RelativeLayout>

    <View style="@style/DivideLine_15" />

    <RelativeLayout
        android:id="@+id/phoneSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selector"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15">

        <TextView
            android:id="@+id/phoneTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="手机号码"
            android:textColor="@color/font_1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="5dp"
            android:text="未绑定"
            android:textColor="@color/font_3"
            android:textSize="15sp" />

    </RelativeLayout>

    <include layout="@layout/divide_middle_15" />

    <RelativeLayout
        android:id="@+id/passwordSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selector"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="修改密码"
            android:textColor="@color/font_1"
            android:textSize="15sp" />

    </RelativeLayout>

    <View style="@style/DivideLine_15" />

    <RelativeLayout
        android:id="@+id/forgetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selector"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="忘记密码"
            android:textColor="@color/font_1"
            android:textSize="15sp" />

    </RelativeLayout>

    <include
        android:id="@+id/close2FALine"
        layout="@layout/divide_middle_15" />

    <RelativeLayout
        android:id="@+id/close2FA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selector"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="关闭两步验证"
            android:textColor="@color/font_1"
            android:textSize="15sp" />

    </RelativeLayout>

    <include layout="@layout/divide_bottom_15" />
</LinearLayout>
