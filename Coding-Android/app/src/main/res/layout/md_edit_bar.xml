<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_comment_edit">

    <View style="@style/DivideLine" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottomColorPrimary"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mdBold"
                style="@style/MarkdownEditBarItem"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="B"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mdItalic"
                style="@style/MarkdownEditBarItem"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="I"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/mdHyperlink"
                style="@style/MarkdownEditBarItem"
                android:text="链接" />


            <TextView
                android:id="@+id/mdPhoto"
                style="@style/MarkdownEditBarItem"
                android:text="图片" />

            <TextView
                android:id="@+id/mdList"
                style="@style/MarkdownEditBarItem"
                android:text="列表" />


            <TextView
                android:id="@+id/mdLinkQuote"
                style="@style/MarkdownEditBarItem"
                android:text="引用" />

            <TextView
                android:id="@+id/mdCode"
                style="@style/MarkdownEditBarItem"
                android:text="code" />


            <TextView
                android:id="@+id/mdTitle"
                style="@style/MarkdownEditBarItem"
                android:text="标题" />

            <TextView
                android:id="@+id/mdDivide"
                style="@style/MarkdownEditBarItem"
                android:text="分割线" />

        </LinearLayout>
    </HorizontalScrollView>

    <View style="@style/DivideLine" />
</merge>