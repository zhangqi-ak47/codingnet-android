<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Commentlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/stand_bg"
    android:clickable="true"
    android:minHeight="50dp"
    android:visibility="visible"
    tools:minHeight="80dp">

    <LinearLayout
        android:layout_width="63dp"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/timeLineUp"
            android:layout_width="2dp"
            android:layout_height="14dp"
            android:background="@color/divide" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/task_list_item_icon"
            android:layout_height="@dimen/task_list_item_icon"
            android:layout_marginTop="1dp"
            android:src="@drawable/ic_default_user" />

        <View
            android:id="@+id/timeLineDown"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/divide" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/font_3"
                android:textSize="14sp"
                tools:text="You can find more information on Jean-François Arcand's blog. Jean-François is the original author of this library." />
        </LinearLayout>

        <TextView
            android:id="@+id/linkContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/padding_14"
            android:layout_marginRight="15dp"
            android:background="@color/gray_dark"
            android:lineSpacingExtra="3dp"
            android:padding="8dp"
            android:textColor="@color/font_2"
            android:textSize="14sp"
            android:visibility="gone"
            tools:text="jdaklsdj;falksdjf;al;sdlkjf"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>
