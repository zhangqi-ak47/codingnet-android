<?xml version="1.0" encoding="utf-8"?>
<org.apmem.tools.layouts.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_12"
    android:layout_marginLeft="@dimen/padding_15"
    android:layout_marginRight="@dimen/padding_15"
    android:layout_marginTop="@dimen/padding_12"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.flyco.roundview.RoundTextView
        android:id="@+id/branchSrc"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="@color/font_3"
        android:textSize="12sp"
        app:rv_backgroundColor="#FFF2F4F6"
        app:rv_cornerRadius="2dp"
        tools:text="Overriding a nested Symbol will allow you to swap out any Symbols contained in an instance – " />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/ic_arrow_merge" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/branchDesc"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="@color/font_3"
        android:textSize="12sp"
        app:rv_backgroundColor="#FFD8DDE4"
        app:rv_cornerRadius="2dp"
        tools:text="Overriding a nested Symbol will allow you to swap out any Symbols contained in an instance – " />
</org.apmem.tools.layouts.FlowLayout>

    